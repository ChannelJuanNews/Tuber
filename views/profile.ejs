<div class="container">
  <div class="row">
      <form class="col s12" action="/profile" method="POST">
        <div class="row">
          <div class="input-field col s6">
            <input value='<%= user.local.first %>' id="first_name" type="text" class="validate">
            <label for="first_name">First Name</label>
          </div>
          <div class="input-field col s6">
            <input value='<%= user.local.last %>' id="last_name" type="text" class="validate">
            <label for="last_name">Last Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input value='<%= user.local.email %>'id="email" type="email" class="validate">
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input type="date" class="datepicker">
            <label for="birthday">Birthday</label>
          </div>
        </div>
        <div class="center">
          <a type="submit"></a>
        </div>
      </form>
    </div>

</div>









