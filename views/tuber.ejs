<br><br>

<main>

<div class="container">

    <% for (var i = 0; i < tutors.length ; i++) { %>
      <div class="row">
      <div class="card blue-grey darken-1">
               <div class="card-content white-text">
                 <span class="card-title"><%= tutors[i].local.first + " " + tutors[i].local.last %></span>
                 <p><%= tutors[i].bio %></p>
                 <br>
                 <% for(var j = 0; j < tutors[i].classes.length; j++){%>
                   <div class="chip"><%= tutors[i].classes[j] %></div>
                  <% } %>
               </div>
               <div class="card-action">
                 <a href="#">Avg Rating: <span class="math"> <%= tutors[i].avgRating %> </span></a>
                 <a href="#">Phone Number: <span class="phone"><%= tutors[i].local.phone %></span></a>
               </div>
             </div>
    </div>
  <% } %>
</div>

</main>

<script type="text/javascript">
$('.phone').text(function(i, text) {
  return text.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
});
